{% extends 'base.html.twig' %}

{% block title %}Les produits
{% endblock %}

{% block body %}
	<h1 class="text-bold text-xl text-center">Les produits</h1>

	<div class="flex gap-4 flex-wrap">
		{% for product in products %}
			<div class="max-w-sm rounded overflow-hidden shadow-lg cursor-pointer" onclick="window.location.href = '{{ path('app_products_details', {id: product.id}) }}'">
				<img class="w-full" src="{{ asset('assets/images/products/' ~ product.image) }}" alt="Sunset in the mountains">
				<div class="px-6 py-4">
					<div class="font-bold text-xl mb-2">{{ product.nom }}</div>
					<p class="text-gray-700 text-base">{{product.prix|number_format(2,',',' ') }}&nbsp;â‚¬</p>
				</div>
				<div class="px-6 pt-4 pb-2">
					<form action="{# {{ path('app_cart_add') }} #}" method="post" class="flex">
						<input type="number" min="1" max="{{ product.stock }}" name="quantity">
						<button type="submit" class="rounded-sm px-8 py-1 bg-blue-500 text-white">
							<i class="fa fa-cart-plus" aria-hidden="true"></i>
						</button>
					</form>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
